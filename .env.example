# Spark AI Video Generation Pipeline Configuration
# Copy this file to .env and fill in your API keys

# API Keys - Functional names for different AI services
CHATBOT_API_KEY=your_gpt4o_api_key_here
IMAGE_GEN_API_KEY=your_image_generation_api_key_here
DETAILED_STORY_API_KEY=your_qwen3_api_key_here
VIDEO_GENERATE_API_KEY=your_veo3_api_key_here

# Model Configuration (optional - defaults provided)
CHATBOT_MODEL=gpt-4o
IMAGE_GEN_MODEL=dall-e-3
DETAILED_STORY_MODEL=qwen3-turbo
VIDEO_GENERATE_MODEL=veo3-standard

# API Endpoints (optional - defaults provided)
CHATBOT_API_ENDPOINT=https://api.openai.com/v1
IMAGE_GEN_API_ENDPOINT=https://api.openai.com/v1
DETAILED_STORY_API_ENDPOINT=https://api.qwen.com/v1
VIDEO_GENERATE_API_ENDPOINT=https://api.veo3.com/v1

# Processing Configuration (optional)
MAX_VIDEO_DURATION=300
MAX_CONCURRENT_GENERATIONS=3
TEMP_STORAGE_PATH=/tmp/spark_videos

# Development Configuration (optional)
DEBUG_MODE=false
LOG_LEVEL=INFO
ENABLE_CACHING=true